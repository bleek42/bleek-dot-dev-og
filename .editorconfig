# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = false

[*.md]
indent_style = tab
indent_size = 4

[*.{js,ts}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{jsx,tsx}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true


[*.{scss,sass,css}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true